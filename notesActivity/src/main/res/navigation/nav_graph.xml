<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main">

    <fragment
        android:id="@+id/main"
        android:name="diarynote.mainfragment.presentation.view.MainFragment"
        android:label="Главная"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_main_to_create_note"
            app:destination="@+id/create_note" />
        <action
            android:id="@+id/action_main_to_read_note"
            app:destination="@+id/read_note" />
    </fragment>

    <fragment
        android:id="@+id/categories"
        android:name="diarynote.categoriesfragment.presentation.view.CategoriesFragment"
        android:label="Категории"
        tools:layout="@layout/fragment_categories">
        <action
            android:id="@+id/action_categories_to_create_category"
            app:destination="@+id/add_category" />
    </fragment>

    <fragment
        android:id="@+id/calendar"
        android:name="diarynote.calendarfragment.presentation.view.CalendarFragment"
        android:label="Календарь"
        tools:layout="@layout/fragment_calendar"/>

    <fragment
        android:id="@+id/settings"
        android:name="diarynote.settingsfragment.presentation.view.SettingsFragment"
        android:label="Настройки"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settings_to_account_settings"
            app:destination="@id/account_settings"/>
        <action
            android:id="@+id/action_settings_to_theme_settings"
            app:destination="@id/theme_settings"/>
    </fragment>

<!--  Main end  -->

    <fragment
        android:id="@+id/create_note"
        android:name="diarynote.createnotescreen.presentation.view.CreateNoteFragment"
        android:label="Создание..."
        tools:layout="@layout/fragment_create_note">
        <action
            android:id="@+id/action_create_note_to_create_category"
            app:destination="@+id/add_category" />
    </fragment>

    <fragment
        android:id="@+id/read_note"
        android:name="diarynote.readnotescreen.presentation.view.ReadNoteFragment"
        android:label="Заметка..."
        tools:layout="@layout/fragment_read_note">

        <action
            android:id="@+id/action_read_note_to_edit_note"
            app:destination="@+id/edit_note"
            app:popUpTo="@id/read_note"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/edit_note"
        android:name="diarynote.editnotescreen.presentation.view.EditNoteFragment"
        android:label="Редактирование..."
        tools:layout="@layout/fragment_edit_note">
        <action
            android:id="@+id/action_edit_note_to_create_category"
            app:destination="@+id/add_category" />
    </fragment>

    <fragment
        android:id="@+id/add_category"
        android:name="diarynote.addcategoryscreen.presentation.view.AddCategoryFragment"
        android:label="Добавить категорию..."
        tools:layout="@layout/fragment_add_category"/>

    <fragment
        android:id="@+id/category_notes"
        android:name="diarynote.categoriesfragment.presentation.view.CategoryNotesFragment"
        android:label="Категория..."
        tools:layout="@layout/fragment_category_notes"/>

    <!--  Settings  -->
    <fragment
        android:id="@+id/account_settings"
        android:name="diarynote.settingsfragment.presentation.view.AccountSettingsFragment"
        android:label="Учетная запись"
        tools:layout="@layout/fragment_account_settings"/>

    <fragment
        android:id="@+id/theme_settings"
        android:name="diarynote.settingsfragment.presentation.view.ThemeFragment"
        android:label="Тема"
        tools:layout="@layout/fragment_theme"/>

</navigation>
