<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/categories_list_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/categories_item_vertical_padding"
    android:paddingTop="@dimen/categories_item_vertical_padding"
    android:paddingLeft="@dimen/categories_item_horizontal_padding"
    android:paddingRight="@dimen/categories_item_horizontal_padding">

    <TextView
        android:id="@+id/category_title_text_view"
        style="@style/categories_list_item_title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Без категории"/>

    <ImageView
        android:id="@+id/category_icon_image_view"
        android:layout_width="@dimen/category_item_image_size"
        android:layout_height="@dimen/category_item_image_size"
        android:layout_marginTop="@dimen/category_item_views_vertical_interval"
        app:layout_constraintTop_toBottomOf="@id/category_title_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/category_icon_image_descrption_text"
        tools:src="@drawable/bottom_nav_categories_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>