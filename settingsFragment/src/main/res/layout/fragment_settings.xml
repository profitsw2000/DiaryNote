<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_fragment_root_layout"
    android:padding="@dimen/notes_activity_fragments_standart_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.SettingsFragment">

    <TextView
        android:id="@+id/settings_screen_title_text_view"
        style="@style/notes_activity_fragment_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/settings_title_text" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_info_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settings_screen_title_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="@dimen/account_main_info_vertical_padding"
        android:paddingBottom="@dimen/account_main_info_vertical_padding">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/account_icon_image_view"
            android:layout_width="@dimen/account_image_size"
            android:layout_height="@dimen/account_image_size"
            android:src="@drawable/person_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeWidth="@dimen/account_image_stroke_size"
            app:strokeColor="?attr/colorPrimary"
            />

        <TextView
            android:id="@+id/account_login_text_view"
            style="@style/settings_fragment_account_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/settings_main_info_image_interval"
            tools:text="ShaCarri Richardson"
            app:layout_constraintBottom_toTopOf="@id/email_text_view"
            app:layout_constraintStart_toEndOf="@id/account_icon_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/email_text_view"
            style="@style/settings_fragment_email_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/account_login_text_view"
            app:layout_constraintStart_toStartOf="@id/account_login_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="lee_dixon@mail.ru"/>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/account_icon_image_view"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/settings_menu_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_info_constraint_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


</androidx.constraintlayout.widget.ConstraintLayout>