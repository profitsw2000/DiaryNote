<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/general_settings_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.GeneralSettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/general_settings_root_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/use_password_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/use_password_text_view"
                style="@style/settings_menu_item_title_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sub_settings_item_text_padding"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/use_password_menu_item_text"/>

            <ImageView
                android:id="@+id/sub_settings_item_image_view"
                android:layout_width="@dimen/general_settings_item_image_size"
                android:layout_height="@dimen/general_settings_item_image_size"
                android:layout_marginEnd="@dimen/sub_settings_item_image_view_margin_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/use_password_text_view"
                app:layout_constraintBottom_toBottomOf="@id/use_password_text_view"
                tools:src="@drawable/unchecked_item"/>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".5"
                android:background="?attr/colorOnSecondary"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/use_password_text_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/unactive_time_to_quit_item_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/use_password_constraint_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/unactive_time_to_quit_item_text_view"
                style="@style/settings_menu_item_title_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/sub_settings_item_text_padding"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/quit_inactive_account_text"/>

            <TextView
                android:id="@+id/quit_account_selected_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sub_settings_item_text_padding"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/unactive_time_to_quit_item_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/unactive_time_to_quit_item_text_view"
                tools:text="День" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".5"
                android:background="?attr/colorOnSecondary"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/unactive_time_to_quit_item_text_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_priority_settings_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/unactive_time_to_quit_item_constraint_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/search_priority_title_text_view"
                style="@style/settings_menu_item_title_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/sub_settings_item_text_padding"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/notes_search_priority_settings_title_text"/>

            <TextView
                android:id="@+id/first_item_to_search_title_text_view"
                style="@style/priority_search_number_item_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standart_constraint_horizontal_padding"
                app:layout_constraintStart_toStartOf="@id/search_priority_title_text_view"
                app:layout_constraintTop_toBottomOf="@+id/search_priority_title_text_view"
                android:text="@string/first_priority_search_item_text" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/first_item_to_search_picker_text_input_layout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standart_constraint_horizontal_padding"
                app:layout_constraintBottom_toBottomOf="@id/first_item_to_search_title_text_view"
                app:layout_constraintEnd_toEndOf="@+id/search_priority_title_text_view"
                app:layout_constraintStart_toEndOf="@+id/first_item_to_search_title_text_view"
                app:layout_constraintTop_toTopOf="@id/first_item_to_search_title_text_view">

                <AutoCompleteTextView
                    android:id="@+id/first_item_to_search_picker_auto_complete_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/notes_search_priority_edit_text_height"
                    app:dropDownBackgroundTint="@color/white"
                    android:padding="0dp"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/second_item_to_search_title_text_view"
                style="@style/priority_search_number_item_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standart_constraint_horizontal_padding"
                android:layout_marginTop="@dimen/extra_large_vertical_margin_between_views"
                app:layout_constraintStart_toStartOf="@id/search_priority_title_text_view"
                app:layout_constraintTop_toBottomOf="@+id/first_item_to_search_title_text_view"
                android:text="@string/second_priority_search_item_text" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/second_item_to_search_picker_text_input_layout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standart_constraint_horizontal_padding"
                app:layout_constraintBottom_toBottomOf="@id/second_item_to_search_title_text_view"
                app:layout_constraintEnd_toEndOf="@+id/search_priority_title_text_view"
                app:layout_constraintStart_toEndOf="@+id/second_item_to_search_title_text_view"
                app:layout_constraintTop_toTopOf="@id/second_item_to_search_title_text_view">

                <AutoCompleteTextView
                    android:id="@+id/second_item_to_search_picker_auto_complete_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/notes_search_priority_edit_text_height"
                    android:padding="0dp"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/third_item_to_search_title_text_view"
                style="@style/priority_search_number_item_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standart_constraint_horizontal_padding"
                android:layout_marginTop="@dimen/extra_large_vertical_margin_between_views"
                app:layout_constraintStart_toStartOf="@id/search_priority_title_text_view"
                app:layout_constraintTop_toBottomOf="@+id/second_item_to_search_title_text_view"
                android:text="@string/third_priority_search_item_text" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/third_item_to_search_picker_text_input_layout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standart_constraint_horizontal_padding"
                app:layout_constraintBottom_toBottomOf="@id/third_item_to_search_title_text_view"
                app:layout_constraintEnd_toEndOf="@+id/search_priority_title_text_view"
                app:layout_constraintStart_toEndOf="@+id/third_item_to_search_title_text_view"
                app:layout_constraintTop_toTopOf="@id/third_item_to_search_title_text_view">

                <AutoCompleteTextView
                    android:id="@+id/third_item_to_search_picker_auto_complete_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/notes_search_priority_edit_text_height"
                    android:padding="0dp"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".5"
                android:background="?attr/colorOnSecondary"
                android:layout_marginTop="@dimen/large_vertical_margin_between_views"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/third_item_to_search_picker_text_input_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>