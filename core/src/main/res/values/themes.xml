<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.DiaryNote" parent="Theme.Material3.DayNight">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_purple_A400</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/deep_purple_A400</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorPrimaryInverse">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_purple_A400</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/deep_purple_A400</item>

        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/deep_purple_A400</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/deep_purple_A400</item>
        <item name="colorOnTertiaryContainer">@color/white</item>

        <!-- Surface brand color. -->
        <item name="colorSurface">@color/deep_purple_100</item>
        <item name="colorOnSurface">@color/deep_purple_A400</item>
        <item name="colorSurfaceVariant">@color/white</item>                <!-- Calendar -->
        <item name="colorOnSurfaceVariant">@color/grey_600</item>
        <item name="colorSurfaceInverse">@color/white</item>
        <item name="colorOnSurfaceInverse">@color/grey_600</item>

        <!-- Error brand color. -->
        <item name="colorError">@color/red_A700</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/red_A700</item>
        <item name="colorOnErrorContainer">@color/white</item>

        <!-- Outline brand color. -->
        <item name="colorOutline">@color/deep_purple_A400</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/deep_purple_50</item>

        <!-- Background color. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <!--Стили для отдельных компонентов -->
                <item name="textInputOutlinedStyle">@style/customTextInputOutlinedStyle</item>
                <item name="bottomNavigationStyle">@style/bottomNavigationStyle</item>
                <item name="chipStyle">@style/customMainChipStyle</item>
                <item name="materialCalendarStyle">@style/customCalendarStyle</item>
        <!--    <item name="materialAlertDialogTheme">@style/dialogStyle</item>   -->

        <!-- Action Bar -->
        <item name="toolbarStyle">@style/appBarStyle</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggleStyle</item>
    </style>

    <!-- Dark application theme. -->
    <style name="Theme.DiaryNoteDark" parent="Theme.Material3.Dark">

        <!-- Outline brand color. -->
        <item name="colorOutline">@color/deep_purple_A400</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/deep_purple_50</item>

        <!-- Background color. -->
        <item name="android:colorBackground">@color/heavy_black</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>