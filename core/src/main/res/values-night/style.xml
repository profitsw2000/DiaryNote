<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Text styles-->
    <style name="bold_text_style">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="semi_transparent_text_style">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="quarter_transparent_text_style">
        <item name="android:alpha">0.75</item>
    </style>

    <style name="semi_transparent_bold_text_style" parent="bold_text_style">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="authorization_screens_title_text_style" parent="bold_text_style">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="authorization_error_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="forgot_password_text_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="notes_activity_fragment_title_text" parent="bold_text_style">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="categories_list_item_title_text_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="notes_list_item_title_text_style" parent="bold_text_style">
    </style>

    <style name="notes_title_text_style" parent="bold_text_style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="notes_content_text_style">
    </style>

    <style name="notes_tags_and_date_text_style" parent="semi_transparent_text_style">
    </style>

    <style name="notes_list_item_content_text_style">
    </style>

    <style name="create_note_fragment_input_field_title_style" parent="bold_text_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="horizontal_category_list_item_name_text_style" parent="TextAppearance.Material3.BodySmall">
        <item name="android:alpha">0.1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="horizontal_category_list_selected_item_name_text_style" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="calendar_chip_text_style" parent="bold_text_style">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="settings_fragment_account_text_style" parent="bold_text_style">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="settings_fragment_email_text_style" parent="semi_transparent_text_style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="settings_menu_item_title_text_style" parent="quarter_transparent_text_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="input_form_title_text_style" parent="semi_transparent_bold_text_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="action_explanations_medium_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="action_explanations_small_text_style" parent="semi_transparent_text_style">

    </style>

    <style name="action_explanations_standard_text_style" parent="semi_transparent_text_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="error_message_text_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dangerous_action_text_view_text_style" parent="bold_text_style">
        <item name="android:textColor">?attr/colorError</item>
    </style>

<!--Button styles-->
    <style name="lightThemeButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">?attr/colorPrimaryInverse</item>
    </style>

    <style name="darkThemeButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="backgroundTint">?attr/colorTertiary</item>
        <item name="strokeColor">?attr/colorOnTertiary</item>
    </style>

    <!--Component styles-->
    <style name="customTextInputOutlinedStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/auth_input_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/auth_input_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/auth_input_field_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/auth_input_field_corner_radius</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="searchFieldTextInputOutlinedStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/search_input_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/search_input_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/search_input_field_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/search_input_field_corner_radius</item>
        <item name="android:editTextColor">?attr/colorOnSecondary</item>
    </style>

    <style name="customMainChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/calendar_chip_background_color</item>
        <item name="chipStrokeColor">@color/deep_purple_A400</item>
        <item name="android:textColor">@color/calendar_chip_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="chipCornerRadius">20dp</item>
    </style>

    <style name="customCalendarStyle" parent="Widget.Material3.MaterialCalendar">

    </style>

    <style name="bottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextAppearanceActive">?attr/textAppearanceTitleMedium</item>
        <item name="itemBackground">?attr/colorSecondary</item>
    </style>

    <style name="dialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">

    </style>

    <style name="appBarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="MyDrawerArrowToggleStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/grey_600</item>
    </style>

    <style name="customEditTextInputOutlinedStyle" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textCursorDrawable">@drawable/input_cursor</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <!-- Shape -->
    <style name="searchInputShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <!-- Account image shape -->
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="custom" parent="">
        <item name="cornerSize">10%</item>
    </style>

</resources>