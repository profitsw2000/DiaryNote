<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sign_in_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="diarynote.signinscreen.presentation.view.SignInFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_icon_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/standart_constraint_vertical_padding"
        android:paddingBottom="@dimen/standart_constraint_vertical_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_icon_image_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/diary_note_app_icon"
            android:contentDescription="@string/main_application_icon_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/standart_constraint_vertical_padding"
        android:paddingTop="@dimen/standart_constraint_vertical_padding"
        android:paddingRight="@dimen/standart_constraint_horizontal_padding"
        android:paddingLeft="@dimen/standart_constraint_horizontal_padding"
        app:layout_constraintTop_toBottomOf="@+id/app_icon_constraint_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/input_title_text_view"
            style="@style/authorization_screens_title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/input_title_text"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/input_forms_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standart_constraint_vertical_spacing_between_views"
            app:layout_constraintTop_toBottomOf="@+id/input_title_text_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                style="?attr/textInputOutlinedStyle"
                android:id="@+id/login_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:hint="@string/login_hint_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="20"
                    android:maxLines="1"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="?attr/textInputOutlinedStyle"
                android:id="@+id/password_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_constraint_vertical_spacing_between_views"
                app:layout_constraintTop_toBottomOf="@+id/login_text_input_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:hint="@string/password_hint_text"
                app:endIconMode="password_toggle"
                app:endIconDrawable="@drawable/password_icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"/>

            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standart_constraint_vertical_spacing_between_views"
            app:layout_constraintTop_toBottomOf="@id/input_forms_constraint_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/login_button_text"/>

        <TextView
            style="@style/forgot_password_text_style"
            android:id="@+id/forgot_password_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standart_constraint_vertical_spacing_between_views"
            app:layout_constraintTop_toBottomOf="@id/login_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/forgot_password_underline_text"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/delimeter_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standart_constraint_vertical_spacing_between_views"
            app:layout_constraintTop_toBottomOf="@id/forgot_password_text_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            
            <View
                android:id="@+id/left_delimeter_line_view"
                android:layout_width="0dp"
                android:layout_height="@dimen/delimeter_line_height"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/or_title_text_view"
                android:background="@color/deep_purple_A400"/>

            <TextView
                style="@style/authorization_screens_title_text_style"
                android:id="@+id/or_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/left_delimeter_line_view"
                app:layout_constraintRight_toLeftOf="@+id/right_delimeter_line_view"
                android:layout_marginRight="@dimen/medium_horizontal_spacing_between_views"
                android:layout_marginLeft="@dimen/medium_horizontal_spacing_between_views"
                android:text="@string/or_delimeter_text"/>

            <View
                android:id="@+id/right_delimeter_line_view"
                android:layout_width="0dp"
                android:layout_height="@dimen/delimeter_line_height"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/or_title_text_view"
                android:background="@color/deep_purple_A400"/>
            
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:id="@+id/registration_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/delimeter_constraint_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/standart_constraint_vertical_spacing_between_views"
            android:text="@string/registration_button_text"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>